<% provide(:title, 'User') %>
<section>
	<table class="table table-striped table-condensed">
		<thead>
			<tr>
				<th>id</th><th>Name</th><th>email</th>
			</tr>
		</thead>
		<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%=user.id%></td><td><%=link_to(user.name, user_path(@id=user.id))%></td><td><%=user.email%>
			</tr>
		<% end %>
		</tbody>
	</table>
</section>
<section>
	<i class="icon-arrow-right" style="vertical-align: middle" ></i> <%= link_to("Neuen User anmelden", anmeldung_path) %>
</section>
