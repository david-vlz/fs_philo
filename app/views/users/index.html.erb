<% provide(:title, 'User&uuml;bersicht'.html_safe) %>
<h3>User&uuml;bersicht</h3>
<section>

	<%= will_paginate %>

	<table class="table table-striped table-condensed">
		<thead>
			<tr>
				<th>id</th><th>Name</th><th>email</th>
			</tr>
		</thead>
		<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%=user.id%></td><td><%=link_to(user.name, user_path(@id=user.id))%></td><td><%=user.email%></td>
			</tr>
		<% end %>
		</tbody>
	</table>
	
	<%= will_paginate %>
	
</section>
<section>
	<i class="icon-arrow-right" style="vertical-align: middle" ></i> <%= link_to("Neuen User anmelden", anmeldung_path) %>
</section>
