<% provide(:title, 'Anmeldung') %>
<h3>Anmeldung</h3>

<div class="row-fluid">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name %>
			
			<%= f.label :email %>
			<%= f.text_field :email %>
			
			<%= f.label :password, "Passwort" %>
			<%= f.password_field :password %>
			
			<%= f.label :password_confirmation, "Passwort best&auml;tigen".html_safe %>
			<%= f.password_field :password_confirmation %>
			
			<%= f.submit "Account erstellen", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>

