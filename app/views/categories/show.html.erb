<% if @category.single_page? %>


	<%= render 'shared/article_full_view', article: @article, is_version: false, single_page_category: true %>


<% else %>


	<% provide(:title, @category.name) %>

	<h2><%= @category.name %><%= render('shared/category_edit_links', category: @category) if signed_in? %></h2>

	<% (0...@articles.count).each do |i| %>
		<% article = @articles[i] %>
	
		<% if article.visible? %>
			<section class="well well-small">
				<%= render('shared/article_preview', article: article, articles: @articles, i: i, is_version: false) %>
			</section>
		<% elsif signed_in? %>
			<section class="well well-small muted">
				<%= render('shared/article_preview', article: article, articles: @articles, i: i, is_version: false) %>
			</section>
		<% end %>
	
	<% end %>

	<% if signed_in? %>
		<%= link_to('<i class="icon-plus pull-right"></i>'.html_safe, 
					new_article_path(category: @category.id), title: 
					'Beitrag hinzuf&uuml;gen'.html_safe) %>
	<% end %>


<% end %>
