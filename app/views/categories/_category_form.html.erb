<%= form_for(category) do |f| %>
	
	<%= render 'shared/error_messages', object: category %>
	
	<%= f.label :name %>
	<%= f.text_field :name %>
	
	<br>
	<br>
	
	<%= f.label :single_Page, 'Art' %>
	
	<%= f.radio_button	:single_page, true %>
	<%= f.label :single_page_true, 'einfache Seite mit einem einzelnen Beitrag', class: 'box-label' %>

	<br>
	
	<%= f.radio_button	:single_page, false %>
	<%= f.label :single_page_false, 'blogartige Seite mit mehreren Beitr&auml;gen'.html_safe, class: 'box-label' %>
	
	<br>
	<br>

	<%= f.label 'Sichtbarkeit' %>
	<%= f.check_box :visible %>
	<%= f.label :visible, 'sichtbar f&uuml;r alle Benutzer'.html_safe, class: 'box-label' %>

	<br>
	<br>
	
	<%= f.label :precursor_id, 'Anordnen nach' %>
	<%= select('category', 'precursor_id', Category.all_in_succession.collect { |c| [ c.name, c.id ] }, { include_blank: 'Vorne' } ) %>
	
	<br>
	<br>
	
	<%= f.submit submit_text, class: 'btn btn-primary' %>
<% end %>
