
<% articles.each do |article| %>

	<% if article.visible? %>
			<%= render('shared/article_preview', 
					   article: article, 
					   movable: (movable ? movable : false), 
					   condition: (condition ? condition : nil), 
					   is_version: is_version, 
					   visible: true,
					   outside_category: outside_category
			) %>
	<% elsif signed_in? %>
			<%= render('shared/article_preview', 
					   article: article, 
					   movable: movable, 
					   condition: condition, 
					   is_version: is_version, 
					   visible: false,
					   outside_category: outside_category
			) %>
	<% end %>

<% end %>

<%= will_paginate articles %>