  clear: both;
  width: auto;
  height: 250px;
  overflow: scroll;
  border: 1px solid #666;
  background-color: #fcfcfc;
  padding: 10px;
}*/
</style>

<ul id="mycarousel" class="jcarousel-skin-tango" style="">

  <% events.each do |event| %>

    <% number_of_days_from_now = (event.start_at.to_date - Date.today).to_i %>

    <li class="ep-event">
      <div>
        <p class="muted">
        <% if number_of_days_from_now != 0 then %>
          In <%= number_of_days_from_now %> Tagen
        <% else %>
          Heute
        <% end %>
        </p>
        <h4><%= event.name %></h4>
        <p><%= event.location if event.location %></p>
        <% if signed_in? %>
          <p><%= link_to('Bearbeiten', edit_event_path(event)) %>
        <% end %>
      </div>
    </li>

  <% end %>

</ul>
