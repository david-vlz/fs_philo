			<div class="article-info pull-right">
				<%= render('shared/article_edit_links', article: article, is_version: false) if signed_in? %>
				<%= render('shared/article_move_links', articles: @articles, i: i) if signed_in? %>
				<br>
				<ul class="muted">
					<li><%= string_from_time(article.created_at) %></li>
					<li><%= article.user.name %></li>
				</ul>
			</div>
			<h3>
				<%= link_to(article.title, article_path(@id=article.id)) %>
			</h3>
			<p class="lead">
				<%= (article.body[0...266]+"...").html_safe %>
			</p>

