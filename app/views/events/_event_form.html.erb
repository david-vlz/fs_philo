<%= form_for(event) do |f| %>

  <%= render 'shared/error_messages', object: event %>

  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <br>
  <br>

  <%= f.label :location, 'Ort' %>
  <%= f.text_field :location %>

  <br>
  <br>

  <%= f.label :start_at, 'Beginn' %>
  <%= f.text_field :start_at %>

  <%= f.label :end_at, 'Ende' %>
  <%= f.text_field :end_at %>

  <br>
  <br>

  <%= f.submit submit_text, class: 'btn btn-primary' %>

<% end %>